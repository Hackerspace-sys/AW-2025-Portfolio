---
const { caption, cssClass, index, site, src, total } = Astro.props

// A random string with the syntax '[a-z][0-9]{3}-index-total'
const key = Math.random().toString(36).slice(2, 6) + '-' + index + '/' + total

const isVideo = src.endsWith('.mp4') || src.endsWith('.webm')
---

<a-work class={cssClass}>
  <div class="a__inner">
    <a href={site} target="_blank">
      {isVideo ? (
        <video
          data-src={src}
          class="a__video js-video"
          loop
          muted
          playsinline
          width="1082"
          height="636"
        >
        </video>
      ) : (
        <img
          src={src}
          class="a__video js-video"
          width="1082"
          height="636"
          alt={caption}
          loading="lazy"
        />
      )}

      <div class="a__caption">
        <div class="a__caption__text">
          {caption}
        </div><!-- .a__caption__text -->

        <div class="a__caption__key">
          #{key}
        </div><!-- .a__caption__key -->
      </div><!-- .a__caption -->
    </a>
  </div><!-- .a__inner -->
</a-work>

<script>
  class AWork extends HTMLElement {
    static observedAttributes = ['progress']

    link: HTMLAnchorElement
    media: HTMLMediaElement | HTMLImageElement
    isPlaying: boolean

    /**
     * Init
     */
    connectedCallback() {
      // Elements
      this.media = this.querySelector('.js-video')
      this.link = this.querySelector('a')

      // Properties
      this.isPlaying = false

      // Events
      this.link.addEventListener('click', this.onClick.bind(this))
      
      // If it's a video, we might need to lazy load it or something, 
      // but existing logic used data-src for video. 
      // For images we just set src directly in the template.
      if (this.media.tagName === 'VIDEO') {
         // The original code didn't have explicit lazy loading logic here besides SWork handling it?
         // Actually SWork has `loadNextVideo` logic. 
         // But AWork receives `data-src` for video.
         // Let's ensure we don't break SWork's loading mechanism if it relies on AWork structure.
         // SWork selects `video` elements from `container`.
         // We'll see if we need to adjust SWork later.
      }
    }

    /**
     * Attribute changed
     */
    attributeChangedCallback(name, oldValue, newValue) {
      if (name === 'progress') {
        this.style.setProperty('--progress', newValue)

        if (newValue === '1' || newValue === '-1') {
          if (this.isPlaying) {
            this.outView()
          }
        } else {
          if (!this.isPlaying) {
            this.inView()
          }
        }
      }
    }

    /**
     * Gets in view
     */
    inView() {
      if (this.media && this.media.tagName === 'VIDEO') {
        (this.media as HTMLVideoElement).play()
      }
      this.isPlaying = true

      this.classList.add('is-inview')
    }

    /**
     * Gets out view
     */
    outView() {
      if (this.media && this.media.tagName === 'VIDEO') {
        (this.media as HTMLVideoElement).pause()
      }
      this.isPlaying = false

      this.classList.remove('is-inview')
    }

    /**
     * On click
     */
    onClick(event: MouseEvent) {
      if (this.link.href.includes('#')) {
        event.preventDefault()
        return false
      }
    }
  }

  customElements.define('a-work', AWork)
</script>

<style lang="scss">
  a-work {
    position: relative;
    top: 0;
    left: 0;

    display: block;
    margin: 0;
    padding: 0.5rem 0.5rem 0;

    background: color(secondary);
    content-visibility: hidden;

    transform-style: preserve-3d;

    will-change: transform;

    @include mq(phone) {
      padding: 0.25rem;
    }

    a {
      display: block;

      text-decoration: none;
    }

    .a__inner {
      display: block;
      margin: 0;
      padding: 0;
    }

    .a__video {
      display: block;

      width: auto;
      max-width: 50vw;
      height: auto;
      max-height: 50vh;

      @include mq(phone) {
        max-width: 80vw;
        max-height: 80vh;
      }
    }

    .a__caption {
      @include flex(row, center, space-between);

      padding: 0.5rem 0.5rem;

      color: color(primary);
      font: 700 11px / 1 font-family(fraktion);
      letter-spacing: 0.15em;
      text-align: right;
      text-transform: uppercase;

      @include mq(phone) {
        display: none;
      }
    }

    &.is-inview {
      content-visibility: visible;
    }
  }
</style>
